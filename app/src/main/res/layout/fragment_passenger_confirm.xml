<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.jonathan.taxidispatcher.ui.passenger_main.PassengerMainViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.passenger_main.PassengerConfirmFragment">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/orderMap"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_default="percent"
                app:layout_constraintHeight_percent="0.6"
                app:layout_constraintStart_toStartOf="parent"
                tools:context=".ui.passenger_main.PassengerMainActivity" />

            <TableLayout
                android:id="@+id/rideInfoTable"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:stretchColumns="*"
                android:background="@color/backgroundBlue"
                app:layout_constraintHeight_default="percent"
                app:layout_constraintHeight_percent="0.3"
                app:layout_constraintTop_toBottomOf="@+id/orderMap">

                <TableRow>

                    <TextView
                        android:background="@drawable/cell_shape"
                        android:padding="8dp"
                        android:text="Pick up Point"
                        android:textAllCaps="true"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/pickUpPointText"
                        android:background="@drawable/cell_shape"
                        android:padding="8dp"
                        android:textAllCaps="true"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:background="@drawable/cell_shape"
                        android:padding="8dp"
                        android:text="Destination"
                        android:textAllCaps="true"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/destinationText"
                        android:background="@drawable/cell_shape"
                        android:padding="8dp"
                        android:textAllCaps="true"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:background="@drawable/cell_shape"
                        android:padding="8dp"
                        android:text="Requirement"
                        android:textAllCaps="true"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/requirementText"
                        android:background="@drawable/cell_shape"
                        android:padding="8dp"
                        android:textAllCaps="true"
                        android:singleLine="true"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/black"
                        android:hint="Your requirement"
                        android:textSize="12sp" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:background="@drawable/cell_shape"
                        android:padding="8dp"
                        android:text="Travel Time"
                        android:textAllCaps="true"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/travelTimeText"
                        android:background="@drawable/cell_shape"
                        android:padding="8dp"
                        android:textAllCaps="true"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:background="@drawable/cell_shape"
                        android:padding="8dp"
                        android:text="Travel Distance"
                        android:textAllCaps="true"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/travelDistanceText"
                        android:background="@drawable/cell_shape"
                        android:padding="8dp"
                        android:textAllCaps="true"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </TableRow>

            </TableLayout>

            <Button
                android:id="@+id/makeTransactionButton"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_span="2"
                android:background="@drawable/round_button"
                android:text="Make Call"
                app:layout_constraintHeight_default="percent"
                app:layout_constraintHeight_percent="0.1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:visibility="@{viewModel.isLoading?View.VISIBLE:View.GONE}"
                app:layout_constraintBottom_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="parent" />
        </android.support.constraint.ConstraintLayout>
    </FrameLayout>
</layout>

<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewModel"
            type="com.jonathan.taxidispatcher.ui.driver_transaction.DriverTransactionViewModel"/>
    </data>
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.driver_transaction.DriverWaitingFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/backgroundBlue">

            <Button
                android:id="@+id/startSearchingPassengerButton"
                android:layout_width="350dp"
                android:layout_height="75dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:text="Not On Service"
                android:layout_above="@+id/plateNumberText"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/plateNumberText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:layout_above="@+id/cancelSearchButton"
                android:text="YT98777"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/cancelSearchButton"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="16dp"
                android:background="@drawable/round_button"
                android:text="Cancel" />

            <Button
                android:id="@+id/signOutTaxiButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="16dp"
                android:background="@color/colorPrimary"
                android:text="Sign Out" />

            <ProgressBar
                android:id="@+id/waitingProgressBar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/waitingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/waitingProgressBar"
                android:text="Finding Passengers..."
                android:layout_centerHorizontal="true"
                android:textColor="@color/black"
                android:visibility="visible"
                android:textSize="30sp"/>
        </RelativeLayout>

    </FrameLayout>
</layout>
